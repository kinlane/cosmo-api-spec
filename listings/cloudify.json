          "responseClass": "BlueprintState",
          "nickname": "upload",
          "parameters": [
            {
              "name": "body",
              "description": "blueprint object that needs to be added. YAML.",
              "required": true,
              "allowMultiple": false,
              "dataType": "Blueprint",
              "paramType": "body"
            }
          ],
          "responseMessages": [
            {
              "code": 201,
              "message": "Created. The URL of the created blueprint should be in the Location header"
            },
            {
              "code": 405,
              "message": "Invalid input"
            }
          ]
