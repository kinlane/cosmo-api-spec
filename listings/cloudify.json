      "properties": {
        "id": {"type": "string"},
        "permalink": {"type": "string"},
        "status": {"type": "string"},
        "deploymentId": {"type": "string"},
        "workflowId": {"type": "string"},
        "blueprintId": {"type": "string"}
      }
    },
    "Deployment": {
